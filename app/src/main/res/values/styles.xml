<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="progressbar_theme" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint">@color/reply_biege</item>
        <item name="android:progressTint">@color/reply_yellow</item>
        <item name="android:minWidth">200dp</item>
    </style>

    <style name="Theme.App" parent="Theme.MaterialComponents">
        <item name="radioButtonStyle">@style/Widget.App.RadioButton</item>
        <item name="switchStyle">@style/Widget.App.Switch</item>
    </style>

    <!-- For radio button style -->
    <style name="Widget.App.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.RadioButton</item>
    </style>

    <style name="ThemeOverlay.App.RadioButton" parent="">
        <item name="colorOnSurface">@color/reply_orange</item>
        <item name="colorSecondary">@color/reply_orange</item>
    </style>

    <!-- For switcher button style -->
    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">#634E0D</item>
        <item name="colorSecondary">#634E0D</item>
    </style>
</resources>